<project>

    <target name="run">
       <exec executable="php" failonerror="true" dir=".">
         <arg line="phpunit --verbose --log-junit phpunit-report.xml" />
       </exec> 
    </target>

    <target name="deploy">
       <copy todir="/var/www/devel.developiu.it/httpdocs/testci/" preservelastmodified="true">
         <fileset dir=".">
            <include name="**/*.*"/>
         </fileset>
      </copy>
    </target>

</project>
